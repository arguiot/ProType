{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
		"amd": true
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-unused-vars": "off",
		"no-cond-assign": "off"
    }
}
